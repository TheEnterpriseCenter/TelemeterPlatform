{% extends "layout.j2" %}
{% block header %}
    <div class="panel panel-default">
        <div class="panel-body">
            {# We'll do an if logged in, then do this navbar, else
                else do other #}
            {%  include 'nav_bar_default.j2' %}
            {%  include 'search.j2' %}
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
    <form method="post">
        <div class="panel panel-primary panel-table">
            <div class="panel-heading text-center">Assets Table</div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for asset in assets['records'] %}
                            <tr>
                                <td class="text-center">
                                    <input type="radio" name="asset_select" value="{{ asset.id }}">
                                </td>
                                <td>{{ asset.name }}</td>
                                <td>{{ asset.location }}</td>
                                <td>{{ asset.ip_address }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row btn-group" role="group">
                    <button type="submit" name="user_action" value="delete" class="btn btn-default btn-danger">Delete Selected Asset</button>
                    <button type="submit" name="user_action" value="modify" class="btn btn-default btn-warning">Modify Selected Asset</button>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>
{% endblock %}

