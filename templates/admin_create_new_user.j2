{% block body %}
<div class="col-lg-6 col-md-offset-0 col-md-6 col-md-offset-5">

    <div class="panel panel-primary">
                <div class="panel-heading text-center">Profile Information</div>
                <div class="panel-body">

                    <div class="form-group row">
                        <label for="example-text-input" class="col-lg-3 col-md-5 col-form-label">First Name</label>
                        <div class="col-10">
                        <input class="form-control" type="text" value="" id="example-text-input">
                        </div>
                    </div>

                    <div class="form-group row">
                      <label for="example-text-input" class="col-lg-3 col-md-5 col-form-label">Last Name</label>
                      <div class="col-10">
                        <input class="form-control" type="text" value="" id="example-text-input">
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="example-tel-input" class="col-lg-3 col-md-5 col-form-label">Telephone Number</label>
                      <div class="col-10">
                        <input class="form-control" type="tel" value="" id="example-tel-input">
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="example-email-input" class="col-lg-3 col-md-5 col-form-label">Email</label>
                      <div class="col-10">
                        <input class="form-control" type="email" value="" id="example-email-input">
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="example-text-input" class="col-lg-3 col-md-5 col-form-label">Organization</label>
                      <div class="col-10">
                        <input class="form-control" type="text" value="" id="example-text-input">
                      </div>
                    </div>


                    <div class="form-group row">
                      <label for="example-text-input" class="col-lg-3 col-md-5 col-form-label">Role</label>
                        <label class="radio-inline"><input type="radio" name="optradio">Teacher</label>
                        <label class="radio-inline"><input type="radio" name="optradio">Technician</label>
                        <label class="radio-inline"><input type="radio" name="optradio">Administrator</label>
                    </div>

                    <h1></h1>

                    <div class="form-group row">

                        <label for="example-password-input" class="col-lg-3 col-md-5 col-form-label">Enter Password</label>

                          <div class="col-10 col-sm-offset-0">
                            <input class="form-control" type="password" value="" id="example-password-input">
                          </div>
                    </div>

                    <div class="form-group row">

                        <label for="example-password-input" class="col-lg-3 col-md-5 col-form-label">Confirm Password</label>

                      <div class="col-10 col-sm-offset-0">
                        <input class="form-control" type="password" value="" id="example-password-input">
                      </div>
                    </div>

                    <h1></h1>

                    <div class="row">
                        <div class="col-12 text-left">
                            <button type="button" class="btn btn-default mtc-btn">Save Information</button>
                        </div>
                    </div>
                </div>
    </div>
</div>

{% endblock %}

