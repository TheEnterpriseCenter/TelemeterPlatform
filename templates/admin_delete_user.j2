{% extends "layout.j2" %}
{% block header %}
    <div class="panel panel-default">
        <div class="panel-body">
            {# We'll do an if logged in, then do this navbar, else
                else do other #}
            {%  include 'nav_bar_default.j2' %}
            {%  include 'search.j2' %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
        <form method="post">
            <div class="panel panel-primary panel-table">
                <div class="panel-heading text-center">Users Table</div>

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th></th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Organization</th>
                                <th>Role</th>
                                <th>Upload ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users['records'] %}
                                {% if user.id != current_user.id %}
                                <tr>
                                    <td class="text-center">
                                        <input type="radio" name="user_select" value="{{ user.id }}">
                                    </td>
                                    <td>{{ user.first }}</td>
                                    <td>{{ user.last }}</td>
                                    <td>{{ user.phone }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.org }}</td>
                                    <td>{{ user.role }}</td>
                                    <td>{{ user.uploadid }}</td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row btn-group" role="group">
                        <button type="submit" name="user_action" value="delete" class="btn btn-default btn-danger">Delete Selected User</button>
                        <button type="submit" name="user_action" value="modify" class="btn btn-default btn-warning">Modify User Profile</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
{% endblock %}

