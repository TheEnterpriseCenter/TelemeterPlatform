{% extends "layout.j2" %}
{% block header %}
    <div class="panel panel-default">
        <div class="panel-body">
            {# We'll do an if logged in, then do this navbar, else
                else do other #}
            {%  include 'nav_bar_default.j2' %}
            {%  include 'search.j2' %}
        </div>
    </div>
{% endblock %}

{% block body %}
<div class="col-lg-offset-3 col-lg-6">
    <div class="panel panel-primary">
        <div class="panel-heading text-center">Asset Information</div>

        <div class="panel-body">
            <form class="form-horizontal" method="post">
                <div class="form-group row">
                    <label for="first" class="col-lg-4 col-md-5 control-label">Asset Name</label>
                    <div class="col-lg-4 col-md-8">
                        <input class="form-control" type="text" value="{{ asset.name }}" id="name" name="name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-lg-4 col-md-5 control-label">Location</label>
                    <div class="col-lg-4 col-md-8">
                        <input class="form-control" type="text" value="{{ asset.location }}" id="location" name="location">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ip" class="col-lg-4 col-md-5 control-label">IP Address</label>
                    <div class="col-lg-4 col-md-8">
                        <input class="form-control" type="text" value="{{ asset.ip_address }}" id="ip" name="ip">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-offset-4 col-md-offset-5 col-lg-3 col-md-6">
                        <button type="submit" class="btn btn-default mtc-btn">Update Asset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

