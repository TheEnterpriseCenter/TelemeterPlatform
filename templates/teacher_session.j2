{% extends "layout.j2" %}
{% block header %}
    <div class="panel panel-default">
        <div class="panel-body">
            {# We'll do an if logged in, then do this navbar, else
                else do other #}
            {%  include 'nav_bar_dev.j2' %}
            {%  include 'nav_bar_index.j2' %}
            {%  include 'search.j2' %}
        </div>
    </div>
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-lg-6 col-md-offset-0 col-md-6 col-md-offset-5">


        <div class="panel panel-primary">
            <div class="panel-heading text-center">Experiment Information</div>
            <div class="panel-body">

                <div class="col-lg-offset-0">
                    <div class="container col-lg-6">

                        <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">Experiment Name</label>
                            <div class="col-10">
                            <input class="form-control" type="text" value="Enter Experiment Name" id="example-text-input">
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-12">
                                <button type="button" class="btn btn-default mtc-btn">New Experiment</button>
                            </div>

                            <div>
                                <div class="col-12 col-sm-offset-1">
                                    <button type="button" class="btn btn-default btn-success">Save Experiment</button>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                            <div class="col-12 col-sm-offset-0">
                                <button type="button" class="btn btn-default btn-success">Start Experiment</button>
                            </div>
                            <div class="col-12 col-sm-offset-1">
                                <button type="button" class="btn btn-default btn-danger">Stop Experiment</button>
                            </div>
                    </div>
                    <div>
                            <h1></h1>

                            {# michaelwashere #}
                            {# Display text here for status of experiment#}
                            <p>Experiment Status >>></p>
                    </div>
                </div>

            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading text-center">Experiment Clip Controls</div>
            <div class="panel-body">

                <div class="col-lg-offset-0">
                    <div class="container col-lg-6">

                            <div class="form-group row">
                                <label for="example-text-input" class="col-2 col-form-label">Clip Name</label>
                                <div class="col-10">
                                    <input class="form-control" type="text" value="Enter Clip Name" id="example-text-input">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-offset-0">
                                    <button type="button" class="btn btn-default mtc-btn">New Clip</button>
                                </div>

                                <div class="col-12 col-sm-offset-1">
                                    <button type="button" class="btn btn-default btn-success">Save Clip</button>
                                </div>

                                <div class="col-12 col-sm-offset-1">
                                    <button type="button" class="btn btn-default btn-danger">Discard Clip</button>
                                </div>
                            </div>

                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-offset-0">
                            <button type="button" class="btn btn-default btn-success">Start Recording</button>
                        </div>

                        <div class="col-12 col-sm-offset-1">
                            <button type="button" class="btn btn-default btn-danger">Stop Recording</button>
                        </div>
                    </div>
                    <div>
                        <h1></h1>

                        {# michaelwashere #}
                        {# Display text here for status of experiment#}
                        <p>Recording Status >>></p>


                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-offset-0 col-md-6 col-md-offset-5">

        <div class="panel panel-primary">
            <div class="panel-heading text-center">Student Emails</div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="comment">One email address per line please.</label>
                    <textarea class="form-control" rows="3" id="comment"></textarea>
                    </div>

                        {# michaelwashere #}
                        {# if we dont use the text area to enter the emails, here is the field for it #}
