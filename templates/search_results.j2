<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary panel-table">
            <div class="panel-heading text-center">Experiments</div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Teacher</th>
                            <th>Students</th>
                            <th>Tags</th>
                            <th>Date</th>
                            <th>YouTube Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for experiment in results['records'] %}
                            <tr>
                                <td>{{ experiment.name }}</td>
                                <td>{{ experiment.teacher }}</td>
                                <td>
                                    {% for student in experiment.students.students %}
                                        {% if not loop.last %}
                                            {{ student + ", " }}
                                        {% else %}
                                            {{ student }}
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for tag in experiment.tags['tags'] %}
                                        {% if not loop.last %}
                                            {{ tag + ", " }}
                                        {% else %}
                                            {{ tag }}
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>{{ experiment.exp_date }}</td>
                                <td><a href="#">Link</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
